<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Border Color -->
    <solid android:color="#FFFFFF" />

    <!-- Border Width -->
    <stroke
        android:width="2dp"
        android:color="#80000000" /> <!-- Border color -->

    <!-- Padding to keep content inside the border -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>