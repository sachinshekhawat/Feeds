<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background track -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#000000"/> <!-- Customize the color as needed -->
            <corners android:radius="5dp"/> <!-- Customize the radius as needed -->
        </shape>
    </item>
    <!-- Define the progress track -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/snackbar_error_color"/> <!-- Customize the color as needed -->
                <corners android:radius="5dp"/> <!-- Customize the radius as needed -->
            </shape>
        </clip>
    </item>
</layer-list>
